@model XBDAppPortalMvcCoreAppPrj.Models.FiltersModel
@*Note: above model is not used Just leav it for later refercen*@
@{
    ViewData["Title1"] = "Home Page";
    var appPortals = ViewBag.Portals;
    //var appFilters = ViewBag.AppFilters; 
    var appTypeFilters = ViewBag.AppTypeFilters;
}

<div class="text-center">
    <div class="portalListRoot">

        <div class="header">Welcome to Ribo App Portals (MVC Core) </div>
        <div class="filterWrap">
            <form asp-action="Go">
                <div class="form-group">
                    @Html.DropDownList("ddlApp", ViewBag.MyAppSelectList as SelectList, "Select App",  new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.DropDownList("ddlAppType", ViewBag.MyAppTypeSelectList  as IEnumerable<SelectListItem>, "Select App Type", new { @class = "form-control" })
                </div>


                <input type="submit" value="Go" class="btn btn-primary" />
            </form>

        </div>

        <table style="margin:1px auto;">
            <tbody>
                <tr class="">
                    <th>AppId</th>
                    <th>App Name</th>
                    <th>App Description</th>
                    <th>AppTypeId</th>
                    <th>App Type</th>
                </tr>
                @foreach (var p in appPortals)
            {
                <tr>
                    <td>@p.AppId</td>
                    <td>@p.AppName</td>
                    <td>@p.AppDes</td>
                    <td>@p.AppTypeId</td>
                    <td>@p.AppType</td>
                </tr>
            }

   
            </tbody>


        </table>
    </div>
</div>